{
  "mappings": [
    {
      "scenarioName": "save-cic",
      "newScenarioState": "Started",
      "request": {
        "method": "GET",
        "url": "/__reset/save-cic"
      },
      "response": {
        "status": 200
      }
    },
    {
      "scenarioName": "save-cic",
      "requiredScenarioState": "Started",
      "request": {
        "method": "POST",
        "url": "/claimedIdentity",

        "bodyPatterns": [
          {
            "equalToJson": {
              "given_names": "${json-unit.any-string}",
              "family_names": "${json-unit.any-string}",
              "date_of_birth": "${json-unit.any-string}",
              "document_selected": "${json-unit.any-string}",
              "date_of_expiry": "${json-unit.any-string}"
            },
            "ignoreArrayOrder": true
          }
        ]
      },
      "response": {
        "status": 200
      }
    },
    {
      "scenarioName": "save-cic",
      "request": {
        "method": "GET",
        "urlPath": "/authorization",
        "queryParameters": {
          "client_id": {
            "equalTo": "standalone"
          },
          "state": {
            "equalTo": "sT@t3"
          },
          "redirect_uri": {
            "equalTo":  "http://example.net/return"
          },
          "response_type": {
            "equalTo": "code"
          },
          "scope": {
            "equalTo": "openid"
          }
        },
        "headers": {
          "session-id": {
            "equalTo": "ABADCAFE"
          }
        }
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "authorizationCode": {
            "value": "FACEFEED"
          },
          "state": {
            "value": "sT@t3"
          },
          "redirect_uri": {
            "value": "http://example.net"
          }
        }
      }
    }
  ]
}

